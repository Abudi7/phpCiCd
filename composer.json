{
    "name": "abdulrhmanalshalal/phpcivd",
    "description": "A simple PHP project with Docker and Composer",
    "type": "project",
    "require": {
      "php": "^8.4"
    },
    "autoload": {
      "psr-4": {
        "App\\": "src/"
      }
    },
    "authors": [
      {
        "name": "Abdulrhman Al Shalal",
        "email": "casper.king14@gmail.com"
      }
    ],
    "require-dev": {
      "phpunit/phpunit": "^12.3",
      "phpstan/phpstan": "^1.11",
      "squizlabs/php_codesniffer": "^3.10"
    },
    "scripts": {
      "test": "vendor/bin/phpunit --colors=always",
      "lint": "vendor/bin/phpcs --standard=PSR12 src public",
      "stan": "vendor/bin/phpstan analyse src --level=max"
    },

"config": { "platform": { "php": "8.4.0" } }


  }
